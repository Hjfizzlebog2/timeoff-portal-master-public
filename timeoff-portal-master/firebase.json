{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "hosting/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "hosting/src",
        "destination": "/index.html"
      }
    ],
    "frameworksBackend": {
      "region": "us-west1"
    }
  }
}
